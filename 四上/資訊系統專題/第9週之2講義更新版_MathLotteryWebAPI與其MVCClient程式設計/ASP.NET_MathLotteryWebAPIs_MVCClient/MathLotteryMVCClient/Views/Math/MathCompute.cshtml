
@model MathLotteryMVCClient.ViewModels.MathViewModel

@{
    ViewBag.Title = "數學服務";
}



<div align="center">
    <br />
    <b class="label label-danger" style="font-size:large">數學運算服務</b>
    <br /> <br />
    @*建立數學服務表單*@
    @using (Html.BeginForm("MathCompute", "Math"))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Num1, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Num1)
                    @Html.ValidationMessageFor(model => model.Num1, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Num2, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Num2)
                    @Html.ValidationMessageFor(model => model.Num2, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Result, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Result)
                </td>
            </tr>
        </table>
        <input type="submit" name="btnCompute" value="加" class="btn btn-success">
        <input type="submit" name="btnCompute" value="減" class="btn btn-success">
        <input type="submit" name="btnCompute" value="乘" class="btn btn-success">
        <input type="submit" name="btnCompute" value="除" class="btn btn-success">
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


