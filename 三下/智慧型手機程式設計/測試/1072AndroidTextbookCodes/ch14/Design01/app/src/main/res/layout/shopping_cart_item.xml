<?xml version="1.0" encoding="utf-8"?>
<!-- 協調畫面配置元件 -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:background="#E1F5FE">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="74dp"
            android:src="@drawable/rpi_zero_v1_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/myclass_classmateprogress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Amount" />

                <TextView
                    android:id="@+id/students_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="50" />

                <ProgressBar
                    android:id="@+id/pro_students"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/myclass_classmateprogress_text"
                    android:layout_marginTop="4dp"
                    android:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myclass_myprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/myclass_myprogress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Discount" />

                <TextView
                    android:id="@+id/my_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="90.0%" />

                <ProgressBar
                    android:id="@+id/pro_me"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/myclass_myprogress_text"
                    android:layout_marginTop="4dp"
                    android:progress="90" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>