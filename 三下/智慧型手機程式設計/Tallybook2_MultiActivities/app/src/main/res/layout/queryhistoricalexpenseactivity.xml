<?xml version="1.0" encoding="utf-8"?>
<!-- 本檔案為查詢歷史消費紀錄之版面配置檔，其所使用到的xml屬性的意義說明如下:
     xmlns:android="http://schemas.android.com/apk/res/android" 設定android此一前置詞代表(map)後面的URI名稱空間
     android:layout_weight="0.6"  設定該元件佔同一個容器整個寬度的0.6， 在同一個容器中的所有成員之總計為1.0
     android:hint 提示字串 
     android:layout_width="match_parent"   設定該元件的寬度與該元件所在容器(它的父類別)之寬度相同
     android:layout_width="wrap_content"   設定該元件的寬度與該元件所包覆的內容相同
     android:layout_hight="match_parent"   設定該元件的高度與該元件所在容器(它的父類別)之高度相同
     android:layout_hight="wrap_content"   設定該元件的高度與該元件所包覆的內容相同
     android:orientation="horizontal" 設定該容器的顯示方向為水平
     android:orientation="vertical" 設定該容器的顯示方向為垂直
     android:text="消費金額:" 設定該元件的文字
     android:textSize="16sp" 設定文字大小為16sp)
     android:textColor="#FF0000" 設定文字的顏色，利用RGB十六進位值(紅、綠、藍)，#000000為黑色，#FFFFFF為白色
     android:inputType="numberDecimal" 輸入文字盒之輸入類型為數值
     android:inputType="text" 輸入文字盒之輸入類型為文字
     android:onClick="btnManageExpenseType_Click" 設定該元件之點擊事件處理方法
     android:id="@+id/btnChoseType" 設定該元件的id常數，以便可以在Java程式中利用findViewById(R.id.btnChoseType)取出該元件
     android:lines="10" 設定該元件(通常是TextView元件)佔了10行  
     android:ems="11" 設定該元件的寬度佔11字寬
      注意:這個版面配置檔利用ScrollView當最外層的容器，可以捲動內容，以便不論手機是直向放或橫向放(垂直方向比較短)都可以操作 
 -->
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FAD2F9">
    
      <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="查詢消費記錄介面"
       android:textSize="20sp"
       android:textStyle="bold"
       android:textColor="#FFFFFF"
       android:background="#184F06"
       android:layout_marginBottom="5dp"
       android:gravity="center_horizontal"/>
      
      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btnChoseStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            style="?android:attr/buttonStyleSmall"
            android:text="選擇起始日期"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:onClick="btnChoseStartDate_Click"/>

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btnChoseEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            style="?android:attr/buttonStyleSmall"
            android:text="選擇結束日期"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:onClick="btnChoseEndDate_Click"/>

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
       <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
	
	        <RadioButton
	            android:id="@+id/radioButtonByDate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:text="依日期先後顯示" 
	            android:textSize="16sp"
	            android:textColor="#0000FF"
	            android:layout_weight="0.5"/>
	
	        <RadioButton
	            android:id="@+id/radioButtonByType"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="依消費種類顯示" 
	            android:textSize="16sp" 
	            android:textColor="#0000FF"
	            android:layout_weight="0.5"/>
       </RadioGroup>
        
    </LinearLayout>

  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnQuery"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="btnQuery_Click"
            android:text="查詢消費紀錄"
            android:textColor="#006600"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDelete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="btnDelete_Click"
            android:text="刪除消費紀錄"
            android:textColor="#006600"
            android:textSize="16sp" />
    </LinearLayout>


  
  	
    <ScrollView
		    android:id="@+id/innerScroller"
		    android:layout_width="match_parent"
		    android:layout_height="250dp">

        	<TextView
		        android:id="@+id/tvOutput"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>t

     </ScrollView>
   
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
     
	    <Button
            android:id="@+id/btnClearOutput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="btnClearMainOutput_Click"
            android:text="清除顯示區" 
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#FF00FF"
            android:layout_margin="5dp"/>

       <Button
            android:id="@+id/btnReturnToMainActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="btnReturnToMainActivity_Click"
            android:text="返回主操作介面" 
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#0000FF"
            android:layout_margin="5dp"/>
       </LinearLayout>
  </LinearLayout>