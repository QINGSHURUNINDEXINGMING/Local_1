
@model WebApplication1.ViewModels.CarryViewModel

@{
    ViewBag.Title = "進位服務";
}



<div align="center">
    <br />
    <b class="label label-danger" style="font-size:x-large">進位運算</b>
    <br />
    <br />
    @*建立進位服務表單*@
    @using (Html.BeginForm("CarryCompute", "Carry"))
    {
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Num, new { @class = "label label-warning label-sm" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.Num)
                @Html.ValidationMessageFor(model => model.Num, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Result1, new { @class = "label label-warning label-sm" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.Result1)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Result2, new { @class = "label label-warning label-sm" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.Result2)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Result3, new { @class = "label label-warning label-sm" })
            </td>
            <td>
                @Html.TextBoxFor(model => model.Result3)
            </td>
        </tr>
    </table>
        <input type="submit" name="btnCompute" value="運算" class="btn btn-success">
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


